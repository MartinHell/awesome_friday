  - servername: "apache.hellstrom.it"
    serveralias: "www.apache.hellstrom.it"
    documentroot: "/var/www/apache"
    extra_parameters: |
      RewriteCond %{HTTP_HOST} !^www\. [NC]
      RewriteRule ^(.*)$ http://www.%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
