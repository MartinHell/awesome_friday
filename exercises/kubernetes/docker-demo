cat << EOF > Dockerfile
FROM python:3.6-jessie # Base
WORKDIR /app # Set workdir/"homedir"
COPY requirements.txt /app/ # Copy file FROM build-host
COPY python.py /app/ # Copy file FROM build-host
RUN pip install --no-cache-dir -r requirements.txt # Execute command DURING build
CMD [ "python", "/app/python.py", "-c", "/app/config.yaml" ] # Execute command ON DEPLOY
EOF

docker build -t <name>:<tag> . # Build image with name+tag ( optional registry host ) 

docker run --rm -it <name>:<tag> bash # Run command with interfactive
 ps auxwf / top # Run command in container
 ip r s / ifconfig # Run command in container

docker run --rm -ti -v config-file:/app/config.yaml <name>:<tag> bash # Run command with interactive + mount file from host
docker ps
docker images


docker run --name my-redis -d redis # Deploy Redis
docker run -d -e 'REDIS_HOST=my-redis' --name send-server --link my-redis:my-redis -p 8080:1443 mozilla/send # Deploy send
